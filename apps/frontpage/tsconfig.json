{
    "compilerOptions": {
        "allowJs": true,
        "allowSyntheticDefaultImports": true,
        "esModuleInterop": true,
        "forceConsistentCasingInFileNames": true,
        "incremental": true,
        "isolatedModules": true,
        "jsx": "preserve",
        "noEmit": true,
        "plugins": [
            {
                "name": "next"
            }
        ],
        "resolveJsonModule": true,
        "strict": true,
        "types": ["jest", "node"]
    },
    "exclude": [
        "node_modules",
        "jest.config.ts",
        "**/*.spec.ts",
        "**/*.test.ts",
        "**/*.jsx",
        "**/*.js",
        "**/*.stories.tsx"
    ],
    "extends": "../../tsconfig.base.json",
    "include": [
        "**/*.ts",
        "**/*.tsx",
        "../../apps/frontpage/.next/types/**/*.ts",
        "../../dist/apps/frontpage/.next/types/**/*.ts",
        "next-env.d.ts",
        ".next/types/**/*.ts"
, "src/_document.js"    ]
}
