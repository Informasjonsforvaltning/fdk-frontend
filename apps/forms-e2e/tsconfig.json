        "allowJs": true,
        "module": "commonjs",
        "outDir": "../../dist/out-tsc",
        "resolveJsonModule": true,
        "sourceMap": false
    },
    "extends": "../../tsconfig.base.json",
    "include": [
        "**/*.ts",
