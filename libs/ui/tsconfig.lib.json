{
    "compilerOptions": {
        "composite": true,
        "declaration": true,
        "outDir": "../../dist/out-tsc",
        "target": "es2017",
        "types": [
            "node",
            "@nx/react/typings/cssmodule.d.ts",
            "@nx/react/typings/image.d.ts",
            "next",
            "@nx/next/typings/image.d.ts"
        ]
    },
    "exclude": [
        "jest.config.ts",
        "src/**/*.spec.ts",
        "src/**/*.test.ts",
        "src/**/*.test.tsx",
        "src/**/*.spec.js",
        "src/**/*.test.js",
        "src/**/*.spec.jsx",
        "src/**/*.test.jsx"
    ],
    "extends": "./tsconfig.json",
    "include": ["src/**/*.js", "src/**/*.jsx", "src/**/*.ts", "src/**/*.tsx"]
}
