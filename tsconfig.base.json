{
  "compileOnSave": false,
  "compilerOptions": {
    "baseUrl": ".",
    "declaration": false,
    "emitDecoratorMetadata": true,
    "experimentalDecorators": true,
    "importHelpers": true,
    "lib": ["es2020", "dom", "dom.iterable"],
    "module": "esnext",
    "moduleResolution": "node",
    "paths": {
      "@fdk-frontend/data-access": ["libs/data-access/src/index.ts"],
      "@fdk-frontend/data-access/server": ["libs/data-access/src/server.ts"],
      "@fdk-frontend/types": ["libs/types/src/index.ts"],
      "@fdk-frontend/types/server": ["libs/types/src/server.ts"],
      "@fdk-frontend/ui/*": ["libs/ui/src/lib/*"],
      "@fdk-frontend/utils": ["libs/utils/src/index.ts"],
      "@fdk-frontend/utils/server": ["libs/utils/src/server.ts"],
      "react": ["./node_modules/react"],
      "react-dom": ["node_modules/react-dom"],
      "@types/react": ["node_modules/@types/react"],
      "@types/react-dom": ["node_modules/@types/react-dom"],
      "storybook-host": ["libs/storybook-host/src/index.ts"]
    },
    "rootDir": ".",
    "skipDefaultLibCheck": true,
    "skipLibCheck": true,
    "sourceMap": true,
    "strict": true,
    "target": "es2015"
  },
  "exclude": [
    "node_modules",
    "tmp",
    "**/*.stories.tsx"
  ]
}
