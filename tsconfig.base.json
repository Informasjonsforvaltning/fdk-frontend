{
    "compileOnSave": false,
    "compilerOptions": {
        "baseUrl": ".",
        "composite": false,
        "declaration": false,
        "emitDecoratorMetadata": true,
        "experimentalDecorators": true,
        "importHelpers": true,
        "esModuleInterop": true,
        "allowSyntheticDefaultImports": true,
        "resolveJsonModule": true,
        "lib": ["es2020", "dom", "dom.iterable"],
        "module": "esnext",
        "moduleResolution": "bundler",
        "outDir": "./dist/out-tsc",
        "paths": {
            "@fdk-frontend/data-access": ["libs/data-access/src/index.ts"],
            "@fdk-frontend/data-access/server": ["libs/data-access/src/server.ts"],
            "@fdk-frontend/dictionaries": ["libs/dictionaries/src/index.ts"],
            "@fdk-frontend/libs/*": ["libs/*"],
            "@fdk-frontend/types": ["libs/types/src/index.ts"],
            "@fdk-frontend/types/server": ["libs/types/src/server.ts"],
            "@fdk-frontend/ui": ["libs/ui/src/index.ts"],
            "@fdk-frontend/ui/*": ["libs/ui/src/lib/*"],
            "@fdk-frontend/utils": ["libs/utils/src/index.ts"],
            "@fdk-frontend/utils/*": ["libs/utils/src/lib/*"],
            "@fdk-frontend/utils/server": ["libs/utils/src/server.ts"],
            "react": ["./node_modules/@types/react"],
            "storybook-host": ["libs/storybook-host/src/index.ts"]
        },
        "rootDir": ".",
        "skipDefaultLibCheck": true,
        "skipLibCheck": true,
        "sourceMap": true,
        "strict": true,
        "target": "es2015",
        "jsx": "react"
    }
}
